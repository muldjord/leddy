<?xml version="1.0" encoding="UTF-8"?>
<theme name="64x32" width="64" height="32">
  <rotation>
    <animation name="random" duration="5000"/>
    <transition name="random"/>
    <runcommand background="runcommand"
                font="tiny"
                fontcolor="#b4b4b4"
		fontshadowcolor="#00000055"
		texty="22"
		waveheight="3"
                wavelength="60"
                command="echo This is the output of a command!"
                interval="30"
		fps="20"/>
    <transition name="random"/>
    <timedate duration="5000"
	      bgcolor="random"
	      fontcolor="complimentary"
	      fontshadowcolor="#000000"
	      timefont="large"
	      timeformat="HH:mm:ss"
	      timex="32"
	      timey="18"
	      timespacing="1,1,1,1,1,1"
	      timealign="center"
	      datefont="large"
	      dateformat="ddMMM"
	      datex="32"
	      datey="4"
	      datespacing="1,1,1"
	      datealign="center"/>
    <transition name="random"/>
    <rss url="http://rss.slashdot.org/Slashdot/slashdotMain"
	 background="rss"
	 font="small"
	 fontcolor="#c7cfdd"
	 fontshadowcolor="#000000"
	 texty="24"
	 showsource="true"
	 waveheight="2"
	 wavelength="60"/>
    <transition name="random"/>
    <weather duration="5000"
	     city="Skanderborg"
	     key="fe9fe6cf47c03d2640d5063fbfa053a2"
	     cityfont="small"
	     citycolor="#b0ffeeff"
	     cityshadowcolor="#000000aa"
	     cityx="2"
	     cityy="13"
	     cityspacing="1"
	     cityalign="left"
	     tempfont="large"
	     tempshadowcolor="#000000aa"
	     tempx="2"
	     tempy="21"
	     tempspacing="1"
	     tempalign="left"/>
    <transition name="random"/>
    <gameoflife duration="5000"
		bgcolor="random"
		fgcolor="complimentary"/>
    <transition name="random"/>
  </rotation>
  <actions>
    <action time="07:00" parameter="brightness" value="100"/>
    <action time="20:00" parameter="brightness" value="90"/>
    <action time="20:30" parameter="brightness" value="80"/>
    <action time="21:00" parameter="brightness" value="70"/>
    <action time="21:30" parameter="brightness" value="60"/>
    <action time="22:00" parameter="brightness" value="50"/>
    <action time="23:59" parameter="brightness" value="5"/>
  </actions>
</theme>
